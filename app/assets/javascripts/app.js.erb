$(document).on('turbolinks:load', function() {
    $("#locsearch").change(function(e){
        $.ajax({
          type: "POST",
          url: "/cities",
          data: { id: $(this).val() },
          success: function(data){
          $("#ajax-content").html(data);
           //console.log(data)
            return false
          },
          error: function(data){
         // console.log(data)
            return false
          }
        });
    });
    
    $(".add").click(function(e){
        
        $.ajax({
          type: "POST",
          url: "/order_items",
          data: {menu_id:$(this).attr('data-id')},
          success: function(data){
         location.reload();
          },
          error: function(data){
         // console.log(data)
            return false
          }
        });
    });
    
});
