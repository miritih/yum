$(document).ready(function(){

    $("#locsearch").chosen().change(function(e){
        $.ajax({
          type: "POST",
          url: "/cities",
          data: { id: $(this).val() },
          success: function(data){
          $("#ajax-content").html(data);
           //console.log(data)
            return false
          },
          error: function(data){
          console.log(data)
            return false
          }
        });
    });
});
