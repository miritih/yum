<% sellers.each do |seller| %>
  <div class="well well-lg">
    <div class="row">
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <%= image_tag(seller.image_url,alt: seller.name,class: "img-responsive") %>
      </div>
      <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
        <h5><%= link_to seller.name %></h5>
        <a class="btn btn-danger pull-right">View menu</a>
        <p><%= seller.description %></p>
        <p>Rating:
        <%= fa_icon "star" %>
        <%= rating_for seller%></p>
      </div>
    </div>
  </div>
<% end %>
