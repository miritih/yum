= form_for(@seller) do |f|
  - if @seller.errors.any?
    #error_explanation
      %h2
        = pluralize(@seller.errors.count, "error")
        prohibited this seller from being saved:
      %ul
        - @seller.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :image_url
    %br/
    = f.text_field :image_url
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
