<!DOCTYPE html>
<html>
<head>
  <title><%= controller.action_name %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Roboto:100,200,300,400,500,600,700|Roboto+Condensed:300,400,700" rel="stylesheet" type="text/css">
</head>
<body>
<!--navigation bar-->
<nav class="navbar navbar-default">
<div class="container">
  <!--group  Brand and toggle for better mobiledisplay -->
<div class="navbar-header">
  <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#yum-header" aria-expanded="false">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
<div class="navbar-brand">YUM REPLICATED</div>
</div><!--EOF navbar header--> 

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="yum-header">
    
     <form class="navbar-form navbar-right">
        <div class="left-inner-addon">
        <%= fa_icon "search" %>
        <input type="text" class="form-control" placeholder="Search for a restaurant, cuisine or dish"/>
    </div>
      </form>
    <ul class="nav navbar-nav navbar-right">

     <% if user_signed_in? %>

      <li><a href="#">Help</a></li>
      <li><%= link_to('Update Profile', edit_user_registration_path) %></li>
      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>

      <% else %>
      
       <li><a href="#">Help</a></li>
       <li><%= link_to('Signup', new_user_registration_path)%></li>
       <li><%= link_to('Login', new_user_session_path)  %></li>
      
      <% end %>

      </ul>
  </div>
</div><!--EOF container -->
</nav><!--EOF nav--> 
    <%= yield %>
<!--welcome section-->

<!--footer -->
<footer></footer>
</body>
</html>
