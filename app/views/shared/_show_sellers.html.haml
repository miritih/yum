- if !sellers.empty?
  - sellers.each do |seller|
    .well.well-lg
      .row
        .col-xs-3.col-sm-3.col-md-3.col-lg-3
          = image_tag(seller.image_url,alt: seller.name,class: "img-responsive")
        .col-xs-9.col-sm-9.col-md-9.col-lg-9
          %h5= link_to "#{seller.name}",menu_url(seller), remote: true
          %a.btn.btn-danger.pull-right View menu
          %p= seller.description
          %p
            Rating:
            \#{fa_icon "star"}
            \#{rating_for seller}
- else
  .alert.alert-danger
    %p
      No Restaurants in this location (#{@location.name})
